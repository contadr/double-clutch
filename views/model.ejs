      function modelUpdateSpec(){

        if(confirm("수정하시겠습니까?") == true){
          $('.wrap-loading').removeClass('loading-display-none');
          $.ajax({
            url: 'model/updatespec',
            dataType: 'json',
            type: 'POST',
            data: {
              'mddtl_id': <%=mddtl.mddtl_id%>,
              'mddtl': {
                'mddtl_price': $('#mddtl_price').val(),
                'mddtl_at': $('#mddtl_at').val()
              },
              'mdsiz': {
                'mdsiz_length': $('#mdsiz_length').val(),
                'mdsiz_width': $('#mdsiz_width').val(),
                'mdsiz_height': $('#mdsiz_height').val(),
                'mdsiz_wheelbase': $('#mdsiz_wheelbase').val(),
                'mdsiz_frontthread': $('#mdsiz_frontthread').val(),
                'mdsiz_rearthread': $('#mdsiz_rearthread').val()
              },
              'mdeng': {
                'mdeng_type': $('#mdeng_type').val(),
                'mdeng_maxps': $('#mdeng_maxps').val(),
                'mdeng_maxkgm': $('#mdeng_maxkgm').val()
              },
              'mddri': {
                'mddri_type': $('#mddri_type').val(),
                'mddri_transmission': $('#mddri_transmission').val(),
                'mddri_wd4system': $('#mddri_wd4system').val(),
                'mddri_powerstearing': $('#mddri_powerstearing').val(),
                'mddri_suspension': $('#mddri_suspension').val(),
                'mddri_break': $('#mddri_break').val(),
                'mddri_tire': $('#mddri_tire').val(),
                'mddri_wheel': $('#mddri_wheel').val()
              },
              'mdfue': {
                'mdfue_complex': $('#mdfue_complex').val(),
                'mdfue_downtown': $('#mdfue_downtown').val(),
                'mdfue_highspeed': $('#mdfue_highspeed').val(),
                'mdfue_co2': $('#mdfue_co2').val(),
                'mdfue_curbweight': $('#mdfue_curbweight').val(),
                'mdfue_gastank': $('#mdfue_gastank').val()
              },
              'mdper': {
                'mdper_zerotohundred': $('#mdper_zerotohundred').val(),
                'mdper_maxspeed': $('#mdper_maxspeed').val()
