      function modelReload(active){
        var url = "http://contadr.org/model?active="+active+"&br_id=<%=br_id%>&br_korName=<%=br_korName%>&br_engName=<%=br_engName%>&lu_id=<%=lu_id%>&lu_name=<%=lu_name%>&gn_id=<%=gn_id%>&gn_name=<%=gn_name%>&md_id=<%=md_id%>&md_name=<%=md_name%>&bc_name=<%=bc_name%>&mddtl_id=<%=mddtl.mddtl_id%>";
