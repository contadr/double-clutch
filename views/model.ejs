                'mdavs_speaker': $('#mdavs_speaker').val(),
                'mdavs_terminal': $('#mdavs_terminal').val(),
                'mdavs_navigation': $('#mdavs_navigation').val(),
                'mdavs_etc': $('#mdavs_etc').val()
